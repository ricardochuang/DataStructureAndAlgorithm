//            //保证不越界      当前插入数还没有找到适当位置
//            arr[insertIndex + 1] = arr[insertIndex];
//            insertIndex--;
//        }
//        //当退出while循环时，说明插入位置找到了，是insertIndex + 1
//        arr[insertIndex + 1] = insertValue;
//        System.out.println("第三轮后");
